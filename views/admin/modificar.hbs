<div class="container" style="margin:150px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" rows="6" name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                    <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" rows="9" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar modificaci√≥n</button>
            </form>
            {{#if error}}
            <p class="mensajeError">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>