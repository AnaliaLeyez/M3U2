<link rel="stylesheet" href="/stylesheets/sesion.css" />

<div class="contenedorPpal">
  {{#if conocido}}
    <div class="sesionAbierta">
      <p>Hola
        {{nombre}}, bienvenido a tu sesión.<br /><br />
        <button><a href="/salir">Salir</a></button>
      </p>
    </div>
  {{/if}}

  {{#unless conocido}}
    <div class="tituloSesion">
      <h2>{{titulo}}</h2>
    </div>
    <div class="sesionCerrada">
      <p>Por favor, inicie sesión:</p>
      <form action="/ingresar" method="post">
        <br />
        <input type="text" name="nombre" />
        <button>Ingresar</button>
      </form>
    </div>
  {{/unless}}

</div>